@model IEnumerable<projdotnet.Models.client>

@{
    ViewBag.Title = "ManageUser";
}


<!-- Carousel wrapper -->
<div class="d-flex">

    <h2>@ViewBag.Title</h2>
    <p class="mx-3 mt-1">
        @Html.ActionLink("Add new product", "Create","product", null, new { @class = "btn btn-light" })
    </p>

</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th> @Html.DisplayNameFor(model => model.nom)</th>
        <th> @Html.DisplayNameFor(model => model.prenom)</th>
        <th> @Html.DisplayNameFor(model => model.tel)</th>
        <th> @Html.DisplayNameFor(model => model.email)</th>
        <th> </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id , user= item.user , password= item.password}, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Panier", "getPanier", "Panier", new { id = item.Id }, new { @class = "btn btn-light" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
